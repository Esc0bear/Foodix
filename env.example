# Configuration des clés API Facebook pour oEmbed Instagram
EXPO_PUBLIC_FB_APP_ID=your_facebook_app_id_here
EXPO_PUBLIC_FB_CLIENT_TOKEN=your_facebook_client_token_here

# URL de votre serveur Heroku (proxy OpenAI)
EXPO_PUBLIC_API_BASE_URL=https://your-heroku-app.herokuapp.com

# URL du service Instagram (pour extraire les légendes)
EXPO_PUBLIC_INSTAGRAM_SERVICE_URL=https://ig-caption-foodix.herokuapp.com

# URLs pour les liens légaux (optionnelles)
EXPO_PUBLIC_PRIVACY_URL=https://example.com/privacy
EXPO_PUBLIC_TERMS_URL=https://example.com/terms

# Email de support (optionnel)
EXPO_PUBLIC_SUPPORT_EMAIL=support@example.com
